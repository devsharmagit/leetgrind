# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/leetgrind?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Cron Job Secret (OPTIONAL - only needed for local/manual testing)
# For production on Vercel, cron authentication is automatic via x-vercel-cron header
# Generate with: openssl rand -base64 32
CRON_SECRET="your-cron-secret-here"

# Rate Limiting (set to "true" to enable)
ENABLE_RATE_LIMIT=false

# Upstash Redis (required only when ENABLE_RATE_LIMIT=true)
# Create a free database at https://console.upstash.com
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-rest-token"
